<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutEditItem"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_gravity="center" >

    <EditText
        android:layout_alignParentTop="true"
        android:id="@+id/etEditItem"
        android:layout_alignParentLeft="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="item message"
        android:imeOptions="actionDone" />
    <TextView
        android:layout_alignParentLeft="true"
        android:id="@+id/lbl_month"
        android:layout_below="@id/etEditItem"
        android:text="Due Date : Month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spMonth"
        android:layout_below="@id/etEditItem"
        android:layout_toRightOf="@id/lbl_month"
        android:layout_alignBottom="@id/lbl_month" />
    <TextView
        android:id="@+id/lbl_day"
        android:layout_below="@id/etEditItem"
        android:layout_toRightOf="@id/spMonth"
        android:text="Day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/lbl_month" />
    <Spinner
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spDay"
        android:layout_below="@id/etEditItem"
        android:layout_toRightOf="@id/lbl_day"
        android:layout_alignBottom="@id/lbl_month" />
    <Spinner
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spPriority"
        android:layout_below="@id/lbl_month" />
    <Button
        android:id="@+id/btDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:layout_below="@id/spPriority"
        android:layout_alignParentLeft="true" />

</RelativeLayout>